<%init>

# If we are a validated user, generate a watchlist

my @watchlist = ( );
if ($User->isvalid) {
  my @items = PageCapt::DB::get_watched_byuser( $User );

  foreach my $id (@items) {
    my ( $item ) = PageCapt::DB::load_list( { number => $id } );
    push @watchlist, $item;
  }
}

